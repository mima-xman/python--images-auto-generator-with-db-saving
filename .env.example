# MongoDB Connection (for application data: images, chats, messages)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
DB_NAME=auto_image_generator

# API Keys MongoDB Connection (for api_keys and key_usage_logs)
# Optional: If not set, will use MONGODB_URI (backward compatible)
BYTEZ_KEYS_MONGODB_URI=mongodb+srv://username:password@keys-cluster.mongodb.net/
BYTEZ_KEYS_DB_NAME=bytez_keys_manager

# Generator Configuration
GENERATOR_NAME=images-auto-generator

# Chat Configuration (optional - for continuing existing chat)
CHAT_UUID=your-chat-uuid-here
CHAT_TITLE=My Image Generator

# Prompt Configuration (just filename, not path)
PROMPT_FILE_NAME=prompt.txt